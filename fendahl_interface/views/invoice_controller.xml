<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->

        <record id="view_fusion_invoice" model="ir.ui.view">
            <field name="name">fusion.invoice.view</field>
            <field name="model">invoice.controller.bi</field>
            <field name="arch" type="xml">
                <tree string="Estimate">
                    <field name="invoicenumber"/>
                     <field name="invoicestatus"/>
                     <field name="internalcompany"/>
                     <field name="counterparty"/>
                     <field name="payablereceivable"/>
                     <field name="material"/>
                     <field name="commodity"/>
                     <field name="amtcurrency"/>
                     <field name="invoiceamt"/>
                     <field name="invoicedate"/>
                     <field name="customsectionnumber"/>
                </tree>
            </field>
         </record>

            <record id="action_fusion_invoice_controller" model="ir.actions.act_window">
            <field name="name">Fusion Invoice Controller</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">invoice.controller.bi</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_fusion_invoice"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Fusion Invoice Controller
              </p>
            </field>
        </record>
         <record id="model_fusion_trade_controller_create_bill" model="ir.actions.server">
            <field name="name">Create Bill</field>
            <field name="model_id" ref="model_invoice_controller_bi"/>
            <field name="binding_model_id" ref="model_invoice_controller_bi"/>
            <field name="binding_view_types">tree,form</field>
            <field name="state">code</field>
            <field name="code">
                action = records.create_bill()
            </field>
        </record>
        <record id="model_account_move_line_create_invoice" model="ir.actions.server">
            <field name="name">Fetch from controller</field>
            <field name="model_id" ref="model_account_move_line"/>
            <field name="binding_model_id" ref="model_account_move_line"/>
            <field name="binding_view_types">tree,form</field>
            <field name="state">code</field>
            <field name="code">
                action = records.fetch_invoice_from_controller()
            </field>
        </record>
          <menuitem id="menu_fusion_Invoice"
              name="Fusion Invoice Controller"
              action="action_fusion_invoice_controller"
              parent="account.menu_finance_receivables"
              sequence="112"/>
    </data>

</odoo>