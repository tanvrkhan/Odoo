<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--  TREE VIEW  -->
    <record id="view_estimate_module_tree" model="ir.ui.view">
        <field name="name">estimate.module.tree</field>
        <field name="model">estimate.module</field>
        <field name="arch" type="xml">
            <tree string="Estimate">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!--  FORM VIEW  -->
    <record id="view_estimate_module_form" model="ir.ui.view">
        <field name="name">estimate.module.form</field>
        <field name="model">estimate.module</field>
        <field name="arch" type="xml">
            <form string="Estimate">
                <header>
                    <button name="validate_lines" string="Validate" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name"/></h1>
                        <field name="company_id" invisible="1"/>
                    </div>
                    <group>
                        <group>
                            <field name="analytic_account_id"/>
                        </group>
                    </group>
                    <group string="Purchases"/>
                    <field name="purchase_line_ids" widget="one2many">
                        <tree editable="bottom" class="purchase_line_ids_tree">
                            <field name="seller_id" required="1"/>
                            <field name="product_id" required="1"/>
                            <field name="uom_id"/>
                            <field name="incoterms_id"/>
                            <field name="company_id" invisible="1"/>
                            <field name="delivery_location_id" required="1"/>
                            <field name="currency_id" required="1"/>
                            <field name="quantity" required="1"/>
                            <field name="qty_confirmed" required="1"/>
                            <field name="price" required="1"/>
                            <field name="price_confirmed"/>
                            <field name="base_amount"/>
                            <field name="forex_rate"/>
                            <field name="converted_amount"/>
                            <field name="vessel_id"/>
                            <field name="deal_date"/>
                            <field name="notes"/>
                            <field name="due_date"/>
                            <field name="lc_boolean"/>
                            <field name="lc_amount"/>
                            <field name="bank_id"/>
                            <field name="analytic_account_id"/>
                            <field name="vendor_reference"/>
                            <field name="validate_check" force_save="1"/>
                            <field name="purchase_order_id" force_save="1"/>
                            <button name="action_confirm_purchases" string="Confirm"
                                type='object' class="btn btn-secondary"
                            />
                        </tree>
                    </field>
                    <group string="Sales"/>
                    <field name="sale_line_ids" widget="one2many">
                        <tree editable="bottom" class="sale_line_ids_tree">
                            <field name="buyer_id" required="1"/>
                            <field name="product_id" required="1"/>
                            <field name="uom_id"/>
                            <field name="incoterms_id"/>
                            <field name="company_id" invisible="1"/>
                            <field name="warehouse_id" invisible="1"/>
                            <field name="delivery_location_id" required="1"/>
                            <field name="currency_id" required="1"/>
                            <field name="quantity" required="1"/>
                            <field name="qty_confirmed" required="1"/>
                            <field name="price" required="1"/>
                            <field name="price_confirmed"/>
                            <field name="base_amount"/>
                            <field name="forex_rate"/>
                            <field name="converted_amount"/>
                            <field name="vessel_id"/>
                            <field name="deal_date"/>
                            <field name="notes"/>
                            <field name="due_date"/>
                            <field name="lc_boolean"/>
                            <field name="lc_amount"/>
                            <field name="bank_id"/>
                            <field name="analytic_account_id"/>
                            <field name="vendor_reference"/>
                            <field name="validate_check" force_save="1"/>
                            <field name="sale_order_id" force_save="1"/>
                            <button name="action_confirm_sales" string='Confirm'
                                type='object' class="btn btn-secondary"
                            />
                        </tree>
                    </field>
                    <group string="Costs"/>
                    <field name="cost_line_ids" widget="one2many">
                        <tree editable="bottom" class="cost_line_ids_tree">
                            <field name="analytic_account_id"/>
                            <field name="product_id" required="1"/>
                            <field name="uom_id"/>
                            <field name="vendor_id"/>
                            <field name="currency_id" required="1"/>
                            <field name="quantity" required="1"/>
                            <field name="unit_price" required="1"/>
                            <field name="base_amount"/>
                            <field name="forex_rate"/>
                            <field name="converted_amount"/>
                            <field name="debit_account_id" required="1"/>
                            <field name="credit_account_id" required="1"/>
                            <field name="journal_id" required="1"/>
                            <field name="counterparty"/>
                            <field name="our_percentage"/>
                            <field name="our_share"/>
                            <field name="account_move_id" force_save="1"/>
                            <button name="action_confirm_costs" string='Confirm'
                                type='object' class="btn btn-secondary"
                            />
                        </tree>
                    </field>
                    <group string="Total"/>
                        <table class="table table-bordered" id="total_lines_table">
                            <thead>
                                <tr>
                                    <th class="text-left">Source</th>
                                    <th class="text-left">Budgeted</th>
                                    <th class="text-left">Confirmed</th>
                                    <th class="text-left">Actual</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <b>Total Purchase Qty.</b>
                                    </td>
                                    <td>
                                        <field name="total_purchase_budgeted_qty" nolabel="1"/>
                                    </td>
                                    <td>
                                        <field name="total_purchase_confirmed_qty" nolabel="1"/>
                                    </td>
                                    <td>
                                        <field name="total_purchase_realized_qty" nolabel="1"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b>Total Sale Qty.</b>
                                    </td>
                                    <td>
                                        <field name="total_sale_budgeted_qty" nolabel="1"/>
                                    </td>
                                    <td>
                                        <field name="total_sale_confirmed_qty" nolabel="1"/>
                                    </td>
                                    <td>
                                        <field name="total_sale_realized_qty" nolabel="1"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b>Sales</b>
                                    </td>
                                    <td>
                                        <field name="total_budgeted_sales" nolabel="1"/>
                                    </td>
                                    <td>
                                        <field name="total_confirmed_sales" nolabel="1"/>
                                    </td>
                                    <td>
                                        <field name="total_realized_sales" nolabel="1"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b>-Purchases</b>
                                    </td>
                                    <td>
                                        <field name="total_budgeted_purchases" nolabel="1"/>
                                    </td>
                                    <td>
                                        <field name="total_confirmed_purchases" nolabel="1"/>
                                    </td>
                                    <td>
                                        <field name="total_realized_purchases" nolabel="1"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b>-Costs</b>
                                    </td>
                                    <td>
                                        <field name="total_budgeted_costs" nolabel="1"/>
                                    </td>
                                    <td>
                                        <field name="total_confirmed_costs" nolabel="1"/>
                                    </td>
                                    <td>
                                        <field name="total_realized_costs" nolabel="1"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b>Total Margin</b>
                                    </td>
                                    <td>
                                        <field name="total_budgeted_margin" nolabel="1"/>
                                    </td>
                                    <td>
                                        <field name="total_confirmed_margin" nolabel="1"/>
                                    </td>
                                    <td>
                                        <field name="total_realized_margin" nolabel="1"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b>Per Unit Margin</b>
                                    </td>
                                    <td>
                                        <field name="total_budgeted_unit_margin" nolabel="1"/>
                                    </td>
                                    <td>
                                        <field name="total_confirmed_unit_margin" nolabel="1"/>
                                    </td>
                                    <td>
                                        <field name="total_realized_unit_margin" nolabel="1"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_view_estimate_module" model="ir.actions.act_window">
            <field name="name">Estimate</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">estimate.module</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_estimate_module_tree"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new estimation
              </p>
            </field>
        </record>

    <menuitem
        id="estimate_root"
        name="Estimate"
        sequence="10"/>

    <menuitem
        id="estimate_menu"
        name="Estimate"
        parent="estimate_module.estimate_root"
        action="estimate_module.action_view_estimate_module"
        sequence="1"/>
</odoo>