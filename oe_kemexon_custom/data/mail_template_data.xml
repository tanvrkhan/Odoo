<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

		<record id="email_template_aged_balance_invoice_report" model="mail.template">
            <field name="name">Aged Balance Invoice</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">Aged Balance</field>
            <field name="email_from">{{object.env.user.email}}</field>
            <field name="lang">${object.company_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
		<record id="email_template_aged_balance_bill_report" model="mail.template">
            <field name="name">Aged Balance Bill</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">Aged Balance</field>
            <field name="email_from">{{object.env.user.email}}</field>
            <field name="lang">${object.company_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
