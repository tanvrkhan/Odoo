 <odoo>
    <data>
        <record id="purchase_order_form_inherit_analytics" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
             <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="analytic_accounts_summary"/>
                </xpath>
            </field>
        </record>
         <record id="purchase_rfq_tree_inherit_analytics" model="ir.ui.view">
            <field name="name">purchase.order.tree</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
             <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="analytic_accounts_summary"/>
                </xpath>
            </field>
        </record>
         <record id="purchase_order_tree_inherit_analytics" model="ir.ui.view">
            <field name="name">purchase.order.tree</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
             <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="analytic_accounts_summary"/>
                </xpath>
            </field>
        </record>
    </data>
 </odoo>