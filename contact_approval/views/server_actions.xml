<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="action_contact_approve" model="ir.actions.server">
            <field name="name">Approve Request</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="groups_id" eval="[(4, ref('contact_approval.contact_approve'))]"/>
            <field name="state">code</field>
            <field name="code">action = records.approve()</field>
        </record>
        <record id="action_contact_reject" model="ir.actions.server">
            <field name="name">Reject Request</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="groups_id" eval="[(4, ref('contact_approval.contact_approve'))]"/>
            <field name="state">code</field>
            <field name="code">action = records.reject()</field>
        </record>
    </data>
</odoo>