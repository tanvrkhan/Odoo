<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sale_order_form_inherit_proforma_invoice" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//form/header/button[@name='action_quotation_send']" position="after">
                        <button name="create_proforma_invoice" string="Create Pro-forma Invoice"
                                type="object" class="oe_highlight"/>
                    </xpath>
                    <xpath expr="//sheet/div/button[@name='action_view_invoice']" position="after">
                        <button name="action_view_proforma_invoice" string="Proforma Invoice"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-pencil-square-o"
                                attrs="{'invisible': [('proforma_invoice_count', '=', 0)]}">
                            <field name="proforma_invoice_count" widget="statinfo" string="PFI"/>
                        </button>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
