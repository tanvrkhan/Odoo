<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="blanket_reservation_form" model="ir.ui.view">
            <field name="name">saleblanket.saleblanket.wizard</field>
       	    <field name="model">blanketwiz.blanketwiz</field>
       	    <field name="arch" type="xml">
                <form string="Create Sale Quatation">
                    <field name="wiz_line_ids">
                        <tree editable="top" delete="0" create="0">
                            <field name="reverse_id" invisible='1'/>
                            <field name="product_id"/>
                            <field name="partner_id" required='1'/>
                            <field name="remaining_quantity"/>
                            <field name="blanket_order_line_id" invisible='1'/>
                            <field name="new_quatation_quantity"/>
                            <field name="unit_of_measure_id" invisible='1'/>
                            <field name="unit_price" invisible='1'/>
                            <field name="taxes_id" widget='many2many_tags' invisible='1'/>
                            <field name="subtotal" invisible='1'/>
                        </tree>
                    </field>
                  <footer>
                      <button name="create_quatation" string="Create Quatation" type="object" class="oe_highlight"/>
                      <button string="Close Window" class="bin-secondary" special="cancel"/>
                  </footer>
                </form>
       	    </field>
        </record>

        <record id="blanket_reservation_wizard" model="ir.actions.act_window">
            <field name="name">Create Sale Quatation</field>
       	    <field name="type">ir.actions.act_window</field>
            <field name="res_model">blanketwiz.blanketwiz</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="blanket_reservation_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>