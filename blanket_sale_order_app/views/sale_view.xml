<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="sale_blanket_form_view" model="ir.ui.view">
			<field name="name">Sale Blanket</field>
			<field name="model">saleblanket.saleblanket</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<button name="open_button" string="Open" class="oe_highlight" type="object" states="new"/>
						<button name="%(blanket_reservation_wizard)d" string="Create Sale Quatation" class="oe_highlight" type="action" states="open"/>
						<button name="button_cancel" string="Cancel" states="open" type="object" confirm="Are you sure want to cancel this order? "/>
						<button name="to_draft" string="To Draft" states="expired,done" type="object"/>
						<field name="state" widget="statusbar" statusbar_visible="new,open,expired"/>
					</header>
					<sheet>
	                    <div class="oe_button_box" name="button_box">
	                        <button name="action_view_sale_order"
	                            type="object"
	                            class="oe_stat_button"
	                            icon="fa-pencil-square-o"
	                            attrs="{'invisible': [('sale_order_count', '=', 0)]}">
	                            <field name="sale_order_count" widget="statinfo" string="Sale Order"/>
	                        </button>
	                    </div>
	                    <div class="oe_title">
	                        <h1>
	                            <field name="name" readonly="1"/>
	                        </h1>
	                    </div>
						<group>
							<group>
								<field name="partner_id" required='1' widget="res_partner_many2one" context="{'search_default_customer':1, 'show_address': 1, 'show_vat': True}" options='{"always_reload": True}'/>
								<field name="invoice_address" required='1'/>
								<field name="delivery_address" required='1'/>
							</group>
							<group>
								<field name="pricelist_id" required='1'/>
								<field name="payment_term_id"/>
								<field name="expiry_date"/>
							</group>
						</group>
						<notebook>
							<page string="Order Line" name="order_line">
								<field name="order_line_ids" attrs="{'readonly': [('state', 'in', ('open','expired'))]}">
									<tree editable='bottom' >
										<field name="reverse_id" invisible='1'/>
										<field name="product_id"/>
										<field name="name"/>
										<field name="quantity"/>
										<field name="remaining_quantity"/>
										<field name="product_uom"/>
										<field name="price_unit"/>
										<field name="tax_id" widget='many2many_tags'/>
										<field name="price_subtotal" widget="monetary"/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>


		<record id="sale_blanket_tree_view" model="ir.ui.view">
            <field name="name">Sale Blanket</field>
            <field name="model">saleblanket.saleblanket</field>
            <field name="arch" type="xml">
                <tree decoration-info="state in ('draft','to_approve')"
                      decoration-muted="state in ('expired')">
                    <field name="name"/>
                    <field name="creation_date"/>
                    <field name="partner_id"/>
                    <field name="current_user"/>
                    <field name="current_company"/>
                    <field name="expiry_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

		<record model="ir.actions.act_window" id="blanket_action_window">
			<field name="name">Blanket Orders</field>
			<field name="res_model">saleblanket.saleblanket</field>
			<field name="view_mode">tree,form</field>
		</record>


		<menuitem name="Blanket Orders" id="menu_product_pack" parent="sale.sale_order_menu" action="blanket_action_window"/>
	</data>
</odoo>