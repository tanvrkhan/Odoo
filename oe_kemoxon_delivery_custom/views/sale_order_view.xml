<odoo>
    <data>
        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']"
                       position="after">
                    <field name="deal_ref"/>
                    <field name="delivery_location"/>
                    <label for="delivery_from" string="Period"/>
                    <div name="date_edit_only" class="o_row oe_edit_only">
                        <span>
                            <strong>From</strong>
                            <field name="delivery_from" class='oe_inline'/>
                        </span>
                        <span>
                            <strong>To</strong>
                            <field name="delivery_to" class='oe_inline'/>
                        </span>
                    </div>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,}
                    </attribute>
                </xpath>

                <xpath expr="//tree//field[@name='product_uom_qty']"
                       position="after">
                    <field name="tolerance_type"/>
                    <field name="tolerance_percentage"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="incoterm_location_custom"/>
                    <field name="status_custom"/>
                    <field name="legal_entity"/>
                    <field name="show_vat_ids"/>
                    <field name="en_plus"/>
                    <field name="show_hs_code"/>
                </xpath>
                <xpath expr="//form//field[@name='team_id']"
                       position="before">
                    <field name="trader"/>
                </xpath>
            </field>
        </record>
        <record id="purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//tree//field[@name='product_qty']"
                       position="after">
                    <field name="tolerance_type"/>
                    <field name="tolerance_percentage"/>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,}
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="incoterm_location_custom"/>
                    <field name="trader"/>
                    <field name="status_custom"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
