<odoo>
    <data>
        <record id="view_legal_entity_form" model="ir.ui.view">
            <field name="name">legal.entity.form</field>
            <field name="model">legal.entity</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="registration_number"/>
                            <field name="incorporation_date"/>
                            <field name="country_id"/>
                            <field name="vat_id"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                </form>
            </field>
        </record>

        <record id="view_legal_entity_tree" model="ir.ui.view">
            <field name="name">legal.entity.tree</field>
            <field name="model">legal.entity</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="registration_number"/>
                    <field name="incorporation_date"/>
                    <field name="country_id"/>
                    <field name="vat_id"/>
                </tree>
            </field>
        </record>
        <record id="view_fi_lc_search" model="ir.ui.view">
            <field name="name">legal.entity.filter.search</field>
            <field name="model">legal.entity</field>
            <field name="arch" type="xml">
                <search>
                    <filter string="Entity Name" name="filter_ref_no" domain="[('name', '!=', False)]"/>
                    <filter string="Registration Number" name="filter_ref_no"
                            domain="[('registration_number', '!=', False)]"/>
                    <filter string="Incorporation Date" name="filter_ref_no"
                            domain="[('incorporation_date', '!=', False)]"/>
                    <field name="name"/>
                    <field name="registration_number"/>
                    <field name="incorporation_date"/>
                    <field name="country_id"/>
                    <field name="vat_id"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Entity Name" name="group_by_lc_type" context="{'group_by': 'name'}"/>
                        <filter string="Registration Number" name="group_by_lc_type"
                                context="{'group_by': 'registration_number'}"/>
                        <filter string="Incorporation Date" name="group_by_beneficiary"
                                context="{'group_by': 'incorporation_date'}"/>
                        <filter string="VAT ID" name="group_by_beneficiary" context="{'group_by': 'vat_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_legal_entity" model="ir.actions.act_window">
            <field name="name">Representing Entity</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">legal.entity</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Representing Entity!
                </p>
            </field>
        </record>
        <menuitem id="menu_legal_entity"
                  name="Representing Entity"
                  action="action_legal_entity"
                  parent="sale.menu_sale_config"
                  sequence="21"/>
    </data>
</odoo>