<?xml version="1.0"?>
<odoo>
    <record id="truck_transport_details_view_tree" model="ir.ui.view">
        <field name="name">truck.transport.details</field>
        <field name="model">truck.transport.details</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="transporter"/>
                <field name="truck"/>
                <field name="trailer"/>
                <field name="driver"/>
                <field name="passport"/>
                <field name="nominated"/>
                <field name="loaded"/>
                <field name="offloaded" attrs="{'readonly': [('is_updated', '=', True)]}" force_save="1"/>
                <field name="status"/>
                <field name="statusdate"/>
                <field name="is_updated" invisible="1"/>
                <!--                <button name="action_update_qty" type="object" string="Update Qty"/>-->
                <button name="action_print_report" type="object" string="Print" context="{'p_id': parent.id}"/>
            </tree>
        </field>
    </record>
    <record id="truck_transport_details_form" model="ir.ui.view">
        <field name="name">truck.transport.details</field>
        <field name="model">truck.transport.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="truck"/>
                        <field name="trailer"/>
                        <field name="driver"/>
                        <field name="passport"/>
                        <field name="nominated"/>
                        <field name="loaded"/>
                        <field name="offloaded"/>
                        <field name="status"/>
                        <field name="statusdate"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
