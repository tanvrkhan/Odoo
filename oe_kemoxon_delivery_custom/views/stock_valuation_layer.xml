<odoo>
    <data>
        <record id="view_stock_valuation_kx_delivery" model="ir.ui.view">
            <field name="name">stock.valuation.form</field>
            <field name="model">stock.valuation.layer</field>
            <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='unit_cost']"
                       position="after">
                    <field name="warehouse_weighted_average"  decoration-danger="warehouse_weighted_average != unit_cost" invisible="0"/>
<field name="warehouse_balance" decoration-danger="warehouse_balance &lt; 0" invisible="0"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
