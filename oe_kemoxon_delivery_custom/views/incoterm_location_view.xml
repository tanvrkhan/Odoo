<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_incoterm_location_tree" model="ir.ui.view">
        <field name="name">incoterm.location.tree</field>
        <field name="model">incoterm.location</field>
        <field name="arch" type="xml">
            <tree default_order="id desc">
                <field name="name"/>
                <field name="region"/>
                <field name="country"/>
            </tree>
        </field>
    </record>
    <record id="view_incoterm_location_form" model="ir.ui.view">
        <field name="name">incoterm.location.form</field>
        <field name="model">incoterm.location</field>
        <field name="arch" type="xml">
            <form string="Incoterm Location">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group name="incoterm_location_group">
                        <group>
                            <field name="name"/>
                            <field name="region"/>
                            <field name="country"/>
                        </group>

                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Enter your Notes"
                                   options="{'collaborative': true, 'resizable' : true, 'codeview':true}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_incoterm_location_search" model="ir.ui.view">
        <field name="name">incoterm.location.filter.search</field>
        <field name="model">incoterm.location</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Name" name="filter_name" domain="[('name', '!=', False)]"/>
                <filter string="Region" name="filter_region"
                        domain="[('region', '!=', False)]"/>
                <filter string="Country" name="filter_country"
                        domain="[('country', '!=', False)]"/>
                <field name="name"/>
                <field name="region"/>
                <field name="country"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Name" name="group_by_name" context="{'group_by': 'name'}"/>
                    <filter string="Region" name="group_by_region" context="{'group_by': 'region'}"/>
                    <filter string="Country" name="group_by_country" context="{'group_by': 'country'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="action_incoterm_location" model="ir.actions.act_window">
        <field name="name">Incoterm Location</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">incoterm.location</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Incoterm Location!
            </p>
        </field>
    </record>
    <menuitem id="menu_incoterm_location_so"
              name="Incoterm Location"
              action="action_incoterm_location"
              parent="sale.sale_order_menu"
              sequence="30"/>
    <menuitem id="menu_incoterm_location_po"
              name="Incoterm Location"
              action="action_incoterm_location"
              parent="purchase.menu_procurement_management"
              sequence="10"/>
</odoo>