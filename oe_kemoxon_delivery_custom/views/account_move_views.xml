<odoo>
    <data>
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']"
                       position="replace">
                    <field name="journal_id" domain="[]"/>
                </xpath>
                <xpath expr="//field[@name='invoice_user_id']"
                       position="after">
                    <field name="trader" invisible="0"/>
                    <field name="deal_ref" invisible="0"/>
                    <field name="picking_id"/>
                    <field name="picking_domain_ids" invisible="1"/>
                    <field name="delivery_location" invisible="0"/>
                    <field name="incoterm_location_custom" invisible="0"/>

                    <field name="vessel_information_id" domain="[('stock_pick_ids', '=', picking_id)]">
                        <!--                            #<attribute name="domain"></attribute>-->
                    </field>
                    <field name="en_plus"/>
                    <field name="show_hs_code"/>
                    <field name="vessel_name" invisible="0"/>
                    <field name="imo" invisible="0"/>
                    <field name="bl_date" invisible="0"/>
                    <field name="cod_date" invisible="0"/>
                    <field name="nor_date" invisible="0"/>
                    <field name="tt_date" invisible="0"/>
                    <field name="ncv" invisible="0"/>
                    <field name="loadport" invisible="0"/>
                    <field name="disport" invisible="0"/>
                    <field name="country_of_origin" invisible="0"/>
                    <field name="delivery_notes"/>
                    <field name="payment_notes"/>
                </xpath>
                <xpath expr="//group/group[@id='header_left_group']" position="inside">
                    <field name="legal_entity"/>
                    <field name="show_vat_ids"/>
                    <field name="show_delivery_to"/>
                    <field name="delivery_from"/>
                    <field name="delivery_to"/>
                    <field name="fusion_reference"/>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,}
                    </attribute>
                </xpath>
            </field>
        </record>
        <record id="model_account_move_action_bulk_draft" model="ir.actions.server">
            <field name="name">Unpost</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">records.button_draft()</field>
        </record>
        <!--        <record id="view_move_form_account_payment" model="ir.ui.view">-->
        <!--            <field name="name">account.payment.form</field>-->
        <!--            <field name="model">account.payment</field>-->
        <!--            <field name="inherit_id" ref="account.view_account_payment_form"/>-->
