<odoo>
    <data>
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']"
                       position="replace">
                    <field name="journal_id" domain="[]"/>
                </xpath>
                <xpath expr="//field[@name='invoice_user_id']"
                       position="after">
                    <field name="trader" invisible="0"/>
                    <field name="deal_ref" invisible="0"/>
                    <field name="picking_id"/>
                    <field name="picking_domain_ids" invisible="1"/>
                    <field name="delivery_location" invisible="0"/>
                    <field name="incoterm_location_custom" invisible="0"/>

                    <field name="vessel_information_id" domain="[('stock_pick_ids', '=', picking_id)]">
                        <!--                            #<attribute name="domain"></attribute>-->
                    </field>
                    <field name="en_plus"/>
                    <field name="show_hs_code"/>
                    <field name="vessel_name" invisible="0"/>
                    <field name="imo" invisible="0"/>
                    <field name="bl_date" invisible="0"/>
                    <field name="cod_date" invisible="0"/>
                    <field name="nor_date" invisible="0"/>
                    <field name="tt_date" invisible="0"/>
                    <field name="ncv" invisible="0"/>
                    <field name="loadport" invisible="0"/>
                    <field name="disport" invisible="0"/>
                    <field name="country_of_origin" invisible="0"/>
                    <field name="delivery_notes"/>
                    <field name="payment_notes"/>
                </xpath>
                <xpath expr="//group/group[@id='header_left_group']" position="inside">
                    <field name="legal_entity"/>
                    <field name="show_vat_ids"/>
                    <field name="show_delivery_to"/>
                    <field name="delivery_from"/>
                    <field name="delivery_to"/>
                    <field name="posted_before"/>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,}
                    </attribute>
                </xpath>
                <xpath expr="//page[@name='other_info']" position="after">
                    <page string="Fusion Info" name="fusion_info">
                        <group string="Fusion Fields" name="fusion_group">
                            <group>
                                <field name="fusion_reference"/>
                                <field name="fusion_invoice_ref"/>
                                <field name="fusion_contract_ref"/>
                                <field name="fusion_location"/>
                                <field name="fusion_trader"/>
                                <field name="fusion_ncv"/>
                                <field name="fusion_loadport"/>
                                <field name="fusion_disport"/>
                                <field name="fusion_representing_entity"/>
                                <field name="fusion_retermsandconditions"/>
                                <field name="fusion_retaxid"/>
                            </group>
                            <group>
                                <field name="fusion_bl_date"/>
                                <field name="fusion_delivery_from"/>
                                <field name="fusion_delivery_to"/>
                                <field name="fusion_country_of_origin"/>
                                <field name="fusion_imo"/>
                                <field name="fusion_vessel_name"/>
                                <field name="fusion_deal_ref"/>
                                <field name="fusion_payment_term"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <!-- Inherit search view to add filters to account move-->
        <record id="view_account_move_filter_inherit" model="ir.ui.view">
            <field name="name">account.move.select.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='cancel']" position="after">
                    <filter string="Fusion Ref Set" name="fusion_reference_set"
                            domain="[('fusion_reference', '!=', False)]"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="fusion_reference"/>
                </xpath>
            </field>
        </record>
        <record id="model_account_move_action_bulk_draft" model="ir.actions.server">
            <field name="name">Unpost</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">records.button_draft()</field>
        </record>

  <record id="model_account_move_action_fix_decimal_accuracy" model="ir.actions.server">
    <field name="name">Fix Decimal Accuracy</field>
    <field name="model_id" ref="account.model_account_move"/>
    <field name="binding_model_id" ref="account.model_account_move"/>
    <field name="binding_view_types">list,form</field>
    <field name="state">code</field>
    <field name="code">records.fix_decimal_accuracy()</field>
</record>

