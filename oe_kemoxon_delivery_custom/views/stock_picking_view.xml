<odoo>
    <data>
        <record id="view_picking_form_inherit" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_confirm']"
                       position="after">
                    <field name="is_truck_invoice_created" invisible="1"/>
                    <button name="action_create_truck_invoice"
                            attrs="{'invisible': [('is_truck_invoice_created', '=', True)]}"
                            string="Create Transporter Invoice" type="object" class="oe_highlight"/>

                </xpath>
                <xpath expr="//button[@name='button_validate' and @class='o_btn_validate']"
                       position="attributes">
                    <attribute name="context">{'check_condition': 1}</attribute>
                </xpath>
                <xpath expr="//button[@name='button_validate' and @class='oe_highlight']"
                       position="attributes">
                    <attribute name="context">{'check_condition': 1}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_picking_move_tree']"
                       position="after">
                    <button class="oe_stat_button" name="action_view_transporter_invoice" type="object"
                            icon="fa-pencil-square-o"
                            attrs="{'invisible': [('is_truck_invoice_created', '=', False)]}"
                            groups="sales_team.group_sale_salesman">
                        <div class="o_field_widget o_stat_info">
                            <field name="transport_invoice_count" no_label="1"/>
                            <span class="o_stat_text">Transporter Invoice</span>
                        </div>
                    </button>
                </xpath>
                <xpath expr="//field[@name='origin']"
                       position="after">
                    <field name="delivery_location"/>
                    <label for="delivery_from" string="Period"/>
                    <div name="date_edit_only" class="o_row oe_edit_only">
                        <span>
                            <strong>From</strong>
                            <field name="delivery_from" class='oe_inline'/>
                        </span>
                        <span>
                            <strong>To</strong>
                            <field name="delivery_to" class='oe_inline'/>
                        </span>
                    </div>
                    <field name="rate"/>
                    <field name="transport_tolerance"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']"
                       position="after">
                    <field name="transporter"/>
                    <field name="consignee"/>
                    <field name="transporter_payment_terms"/>
                </xpath>
                <xpath expr="//notebook"
                       position="inside">
                    <page string="Vessel" name="vessel">
                        <group>
                            <group>
                                <field name="vessel_name"/>
                                <field name="bill_date"/>
                                <field name="imo_number"/>
                            </group>
                        </group>
                    </page>
                    <page name="truck_details" string="Truck Details">
                        <field name="truck_transport_details_ids"/>
                    </page>
                    <page name="vessels_information" string="Vessel Details">
                        <field name="vessel_ids"/>
                    </page>
                </xpath>
                <xpath expr="//field[@name='move_type']" position="after">
                    <field name="tt_date"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
