<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="email_template_aged_balance_invoice_report" model="mail.template">
            <field name="name">Aged Balance Invoice</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">Aged Balance</field>
            <field name="email_from">{{object.env.user.email}}</field>
            <field name="lang">${object.company_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
        <record id="email_template_aged_balance_bill_report" model="mail.template">
            <field name="name">Aged Balance Bill</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">Aged Balance</field>
            <field name="email_from">{{object.env.user.email}}</field>
            <field name="lang">${object.company_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
        <record id="email_template_customer_reminder" model="mail.template">
            <field name="name">Customer Reminder 1 Day</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">Over due invoice notification</field>
            <field name="email_from">{{object.env.user.email}}</field>
            <field name="body_html" type="html">
                <div>
                    <p>Dear Management<t t-out="object.partner_id.name or ''"/>,
                    </p>
                    <p>Please note that for customer<t t-out="object.partner_id.name or ''"/>,<t
                            t-out="object.partner_id.name or ''"/>, the following invoice was not paid in due
                        time:
                        <t t-out="object.amount_residual or ''"/>
                        <t t-out="object.currency_id.name or ''"/>
                        for our invoice no.
                        <t
                                t-out="object.name or ''"/>
                        due yesterday.
                    </p>
                    <p>Very best regards,</p>
                    <p>Financial Department</p>
                    <p>Kemexon Limited</p>
                    <p>Hong Kong</p>
                    <p>Date<t t-out="datetime.date.today() or ''"/>
                    </p>

                </div>
            </field>
            <field name="lang">${object.company_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
        <record id="email_template_friendly_reminder_reminder" model="mail.template">
            <field name="name">Friendly Reminder</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">Friendly Reminder</field>
            <field name="email_from">{{object.env.user.email}}</field>
            <field name="body_html" type="html">
                <div>
                    <p>Dear Management<t t-out="object.partner_id.name or ''"/>,
                    </p>

                    <p>Please make sure the following invoice is paid in due time
                        <t t-out="object.amount_residual or ''"/>
                         <t t-out="object.currency_id.name or ''"/>
                        for our invoice no.
                        <t
                                t-out="object.name or ''"/>
                        due on
                        <t t-out="object.invoice_date_due"/>
                        Please disregard this email if this invoice has already been paid
                        Many thanks in advance for your cooperation
                    </p>
                    <p>Very best regards,</p>
                    <p>Financial Department</p>
                    <p>Kemexon Limited</p>
                    <p>Hong Kong</p>
                    <p>Date<t t-out="datetime.date.today() or ''"/>
                    </p>

                </div>
            </field>
            <field name="lang">${object.company_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
