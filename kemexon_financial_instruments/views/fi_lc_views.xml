<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fi_lc_tree" model="ir.ui.view">
        <field name="name">fi.lc.tree</field>
        <field name="model">fi.lc</field>
        <field name="arch" type="xml">
            <tree default_order="id desc">
                <field name="ref_no"/>
                <field name="type"/>
                <field name="lc_type"/>
                <field name="issuance_date"/>
                <field name="expiry_date"/>
                <field name="beneficiary"/>
                <field name="beneficiary_bank"/>
                <field name="beneficiary_bank_reference"/>
                <field name="applicant"/>
                <field name="applicant_bank"/>
                <field name="applicant_bank_reference"/>
                <field name="advising_confirming_bank"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>
    <record id="view_fi_lc_form" model="ir.ui.view">
        <field name="name">fi.lc.form</field>
        <field name="model">fi.lc</field>
        <field name="arch" type="xml">
            <form string="Financial Instrument LC">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ref_no" readonly="1"/>
                        </h1>
                    </div>
                    <group name="fi_lc_group">
                        <group>
                            <field name="ref_no"/>
                            <field name="type"/>
                            <field name="lc_type"/>
                            <field name="sub_limit"/>
                            <field name="issuance_date"/>
                            <field name="expiry_date"/>
                            <field name="is_active"/>
                        </group>

                        <group>
                            <field name="beneficiary"/>
                            <field name="beneficiary_bank"/>
                            <field name="beneficiary_bank_reference"/>
                            <field name="sub_limit"/>
                            <field name="applicant"/>
                            <field name="applicant_bank"/>
                            <field name="applicant_bank_reference"/>
                            <field name="advising_confirming_bank"/>
                        </group>

                    </group>
                    <notebook>
                        <page name="fi_lc_lines_view" string="LC Lines">
                            <field name="fi_lc_line_ids"/>
                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group colspan="4">
                                    <field colspan="2" name="notes" nolabel="1" placeholder="Terms and conditions..."/>
                                </group>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="lc_total">
                                    <field name="total_quantity"
                                           style="font-size: 14px; font-weight: bold;"/>
                                    <field name="total_amount" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"
                                           style="font-size: 14px; font-weight: bold;">
                                    </field>
                                    <field name="currency_id" invisible="1"/>
                                </group>
                                <div class="clearfix"/>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Enter your Notes"
                                   options="{'collaborative': true, 'resizable' : true, 'codeview':true}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="o_attachment_preview"/>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_fi_lc_search" model="ir.ui.view">
        <field name="name">fi.lc.filter.search</field>
        <field name="model">fi.lc</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Reference" name="filter_ref_no" domain="[('ref_no', '!=', False)]"/>
                <filter string="Beneficiary Bank Reference" name="filter_ref_no" domain="[('beneficiary_bank_reference', '!=', False)]"/>
                <filter string="Applicant Bank Reference" name="filter_ref_no" domain="[('applicant_bank_reference', '!=', False)]"/>
                <field name="ref_no"/>
                <field name="type"/>
                <field name="lc_type"/>
                <field name="issuance_date"/>
                <field name="expiry_date"/>
                <field name="beneficiary"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Reference" name="group_by_lc_type" context="{'group_by': 'ref_no'}"/>
                    <filter string="LC Type" name="group_by_lc_type" context="{'group_by': 'lc_type'}"/>
                    <filter string="Beneficiary" name="group_by_beneficiary" context="{'group_by': 'beneficiary'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="action_fi_lc" model="ir.actions.act_window">
        <field name="name">Financial Instruments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">fi.lc</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Financial Instruments!
            </p>
        </field>
    </record>
    <menuitem id="menu_fi_lc"
              name="Financial Instruments"
              action="action_fi_lc"
              parent="account.menu_finance_receivables"
              sequence="5"/>
</odoo>