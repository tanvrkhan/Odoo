<odoo>
    <data>
        <record id="action_purchase_order" model="ir.actions.act_window">
            <field name="name">Purchase Order Lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order.line</field>
            <field name="view_mode">tree</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your Purchase Order!
                </p>
            </field>
        </record>
        <record id="action_sale_order" model="ir.actions.act_window">
            <field name="name">Sale Order Lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.line</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your Sale Order!
                </p>
            </field>
        </record>
        <record id="action_account_move_line_sale" model="ir.actions.act_window">
            <field name="name">Sale Invoice Lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move.line</field>
            <field name="view_mode">tree</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your Sale Invoice!
                </p>
            </field>
            <field name="domain">[('move_id.journal_id.type', '=', 'sale')]</field>
        </record>
        <record id="action_account_move_line_purchase" model="ir.actions.act_window">
            <field name="name">Purchase Invoice Lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move.line</field>
            <field name="view_mode">tree</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your Vendor Invoice!
                </p>
            </field>
            <field name="domain">[('move_id.journal_id.type', '=', 'purchase')]</field>
        </record>
        <record id="action_stock_truck_transport_details_lines" model="ir.actions.act_window">
            <field name="name">Truck Transport Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">truck.transport.details</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your Truck Transport!
                </p>
            </field>
        </record>
        <record id="action_blanket_order_lines_po" model="ir.actions.act_window">
            <field name="name">Blanket Order Lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.requisition.line</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Blanket Order Line!
                </p>
            </field>
        </record>
        <record id="action_blanket_order_line_so" model="ir.actions.act_window">
            <field name="name">Blanket Order Lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">orderline.orderline</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Blanket Order Line!
                </p>
            </field>
        </record>
        <menuitem id="menu_blanket_order_lines_so"
                  name="Blanket Order Lines"
                  action="action_blanket_order_line_so"
                  parent="sale.sale_order_menu"
                  sequence="12"/>
        <menuitem id="menu_blanket_order_lines_po"
                  name="Blanket Order Lines"
                  action="action_blanket_order_lines_po"
                  parent="purchase.menu_procurement_management"
                  sequence="10"/>

        <record id="truck_detail_action" model="ir.actions.act_window">
            <field name="name">Truck Transport Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">truck.transport.details.view</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="truck_transport_details_tree">
            <field name="name">Truck Transport Details</field>
            <field name="model">truck.transport.details.view</field>
            <field name="arch" type="xml">
                <tree string="Truck Transport Details">
                    <field name='seq' optional="hide"/>
                    <field name='truck'/>
                    <field name='transporter'/>
                    <field name='trailer'/>
                    <field name='driver'/>
                    <field name='passport'/>
                    <field name='nominated'/>
                    <field name='loaded'/>
                    <field name='offloaded'/>
                    <field name='date' optional="hide"/>
                    <field name='status' widget="badge"/>
                    <field name='statusdate' optional="hide"/>
                    <field name='picking_id' optional="hide"/>
                    <field name='stock_pick_ids' optional="hide"/>
                </tree>
            </field>
        </record>

        <menuitem id="menu_truck_transport_details_account_2"
                  name="Truck Transport Details"
                  action="truck_detail_action"
                  parent="account.menu_finance_receivables"
                  sequence="10"/>
        <menuitem id="menu_truck_transport_details_stock_1"
                  name="Truck Transport Details"
                  action="truck_detail_action"
                  parent="stock.menu_stock_warehouse_mgmt"
                  sequence="20"/>

        <menuitem id="menu_purchase_invoice_lines"
                  name="Bill Lines"
                  action="action_account_move_line_purchase"
                  parent="account.menu_finance_payables"
                  sequence="1"/>

        <menuitem id="menu_sale_invoice_lines"
                  name="Invoice Lines"
                  action="action_account_move_line_sale"
                  parent="account.menu_finance_receivables"
                  sequence="1"/>

        <menuitem id="menu_sale_order_lines"
                  name="Order Lines"
                  action="action_sale_order"
                  parent="sale.sale_order_menu"
                  sequence="20"/>

        <menuitem id="menu_purchase_order_lines"
                  name="Purchase Order Lines"
                  action="action_purchase_order"
                  parent="purchase.menu_procurement_management"
                  sequence="8"/>

    </data>
</odoo>
