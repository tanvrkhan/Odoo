<odoo>
    <data>
        <record id="action_purchase_order" model="ir.actions.act_window">
            <field name="name">Purchase Order Line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order.line</field>
            <field name="view_mode">tree</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your Purchase Order!
                </p>
            </field>
        </record>


        <record id="action_sale_order" model="ir.actions.act_window">
            <field name="name">Sale Order Line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.line</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your Sale Order!
                </p>
            </field>
        </record>

        <record id="action_account_move_line_sale" model="ir.actions.act_window">
            <field name="name">Sale Invoice Line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move.line</field>
            <field name="view_mode">tree</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your Sale Invoice!
                </p>
            </field>
            <field name="domain">[('move_id.journal_id.type', '=', 'sale')]</field>
        </record>

        <record id="action_account_move_line_purchase" model="ir.actions.act_window">
            <field name="name">Purchase Invoice Line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move.line</field>
            <field name="view_mode">tree</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your Vendor Invoice!
                </p>
            </field>
            <field name="domain">[('move_id.journal_id.type', '=', 'purchase')]</field>
        </record>

        <menuitem id="menu_purchase_invoice_lines"
                  name="Bill Lines"
                  action="action_account_move_line_purchase"
                  parent="account.menu_finance_payables"
                  sequence="1"/>

        <menuitem id="menu_sale_invoice_lines"
                  name="Invoice Lines"
                  action="action_account_move_line_sale"
                  parent="account.menu_finance_receivables"
                  sequence="1"/>

        <menuitem id="menu_sale_order_lines"
                  name="Order Lines"
                  action="action_sale_order"
                  parent="sale.sale_order_menu"
                  sequence="20"/>

        <menuitem id="menu_purchase_order_lines"
                  name="Purchase Order Lines"
                  action="action_purchase_order"
                  parent="purchase.menu_procurement_management"
                  sequence="8"/>

    </data>
</odoo>