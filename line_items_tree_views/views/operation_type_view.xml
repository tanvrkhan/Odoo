<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_move_line_new_tree_inherited" model="ir.ui.view">
            <field name="name">stock.move.line.new.tree.inherit</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='qty_done']" position="after">
                    <field name="qty_done_success" string="Incoming"
                           attrs="{'invisible': [('location_usage', 'in', ('internal','transit')), ('location_dest_usage', 'not in', ('internal','transit'))]}"/>
                    <field name="qty_done_danger" string="Outgoing"
                           attrs="{'invisible': [('location_usage', 'not in', ('internal','transit')), ('location_dest_usage', 'in', ('internal','transit'))]}"/>
                    <field name="qty_done_difference"/>
                    <field name="qty_done_internal_transfer" sum="Sum"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
