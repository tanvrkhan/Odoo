<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_requisition_line_tree" model="ir.ui.view">
        <field name="name">purchase.requisition.line.tree</field>
        <field name="model">purchase.requisition.line</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="product_id"/>
                <field name="product_description_variants"/>
                <field name="product_qty"/>
                <field name="company_id"/>
                <field name="tolerance_type"/>
                <field name="tolerance_percentage"/>
                <field name="qty_ordered"/>
                <field name="price_unit"/>
                <field name="supplier_info_ids"/>
            </tree>
        </field>
    </record>
    <record id="view_purchase_requisition_line_form" model="ir.ui.view">
        <field name="name">purchase.requisition.line.form</field>
        <field name="model">purchase.requisition.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="product_description_variants"/>
                        <field name="product_qty"/>
                        <field name="company_id"/>
                        <field name="tolerance_type"/>
                        <field name="tolerance_percentage"/>
                        <field name="qty_ordered"/>
                        <field name="price_unit"/>
                        <field name="supplier_info_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_orderline_orderline_tree" model="ir.ui.view">
        <field name="name">orderline.orderline.tree</field>
        <field name="model">orderline.orderline</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="reverse_id"/>
                <field name="product_id"/>
                <field name="name"/>
                <field name="quantity"/>
                <field name="remaining_quantity"/>
                <field name="product_uom"/>
                <field name="price_unit"/>
                <field name="tax_id"/>
                <field name="price_subtotal"/>
            </tree>
        </field>
    </record>
    <record id="view_orderline_orderline_form" model="ir.ui.view">
        <field name="name">orderline.orderline.form</field>
        <field name="model">orderline.orderline</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="reverse_id"/>
                        <field name="product_id"/>
                        <field name="name"/>
                        <field name="quantity"/>
                        <field name="remaining_quantity"/>
                        <field name="product_uom"/>
                        <field name="price_unit"/>
                        <field name="tax_id"/>
                        <field name="price_subtotal"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>