<odoo>
    <data>
        <record id="profit_loss_tree_view" model="ir.ui.view">
            <field name="name">profit_loss_tree_view</field>
            <field name="model">profit.loss.view</field>
            <field name="arch" type="xml">
                <tree string="Profit And Loss">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="analytic_account_id"/>
                    <field name="account_id"/>
                    <field name="price_subtotal"/>
                    <field name="description" optional="hide"/>
                    <field name="quantity" optional="hide"/>
                    <field name="unit_price" optional="hide"/>
                    <field name="report_type" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                </tree>
            </field>
        </record>
        <record id="profit_loss_view_search_view" model="ir.ui.view">
            <field name="name">profit.loss.view.search.view</field>
            <field name="model">profit.loss.view</field>
            <field name="arch" type="xml">
                <search string="Profit And Loss search view">
                    <field name="report_type"/>
                    <field name="name"/>
                    <field name="product_id"/>
                    <group expand="0" string="Group By">
                        <filter name="group_report_type" string="Types" context="{'group_by' : 'report_type'}"/>
                        <filter name="group_name" string="Name" context="{'group_by' : 'name'}"/>
                        <filter name="group_product_id" string="Product" context="{'group_by' : 'product_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="profit_loss_view_action" model="ir.actions.act_window">
            <field name="name">Profit And Loss</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">profit.loss.view</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="context">{'search_default_group_report_type':1,'search_default_group_name':1}
            </field>


        </record>
        <menuitem id="profit_and_loss_view_menu"
                  name="Profit And Loss"
                  action="profit_loss_view_action"
                  parent="account.menu_finance_reports"
                  sequence="11"/>


        <record id="sale_order_form_inherit" model="ir.ui.view">
            <field name="name">sale_order_form_inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="after">
                    <field name="ann_acc"/>
                </xpath>

            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="account_move_form_inherit" model="ir.ui.view">
            <field name="name">account_move_form_inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='name']" position="after">
                    <field name="ann_acc"/>
                </xpath>

            </field>
        </record>


        <record id="purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase_order_form_inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="after">
                    <field name="ann_acc"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>