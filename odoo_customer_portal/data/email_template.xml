<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_template_attachment_expiry" model="mail.template">
            <field name="name">Attachment Expiry</field>
            <field name="model_id" ref="base.model_ir_attachment"/>
            <field name="subject">Attachment Expiry</field>
            <field name="email_from">{{object.env.user.email}}</field>
            <field name="body_html" type="html">
                <div>
                    <p>The
                        <t t-out="object.name or ''"/>
                        is near to expiry
                        <t t-out="object.expiry_date or ''"/>
                    </p>


                </div>
            </field>
            <field name="lang">${object.company_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>