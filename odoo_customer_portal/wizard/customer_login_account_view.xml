<odoo>
    <data>
    <record id="id_wk_customer_portal_account_wzard" model="ir.ui.view">
            <field name="name">Customer login account configuration</field>
            <field name="model">customer.login.account</field>
            <field name="arch" type="xml">
                <form string="Customer Account">
                    <group colspan="6">
                        <div>
                            <p>
                                Customer Account for this Customer already exist.
                                <br/>
                                Wants to send reset password URL?.
                            </p>
                        </div>
                    </group>
                    <footer>
                        <button string="Send Reset customer Password Instruction" type="object" name="create_customer_acocunt" icon="fa-mail-forward" class="oe_highlight"/>
                        <button string="Cancel" class='oe_link' special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="id_wk_customer_portal_account_wzard2" model="ir.ui.view">
              <field name="name">customer login account configuration2</field>
              <field name="model">customer.login.account</field>
              <field name="arch" type="xml">
                  <form string="customer Account">
                        <group colspan="4">
                            <div>
                                <p>
                                    A new portal user will be created with customer name and email address.
                                    <br/>
                                    customer will recieve an email with a sign-up URL.
                                </p>
                            </div>
                        </group>
                      <footer>
                          <button string="Send customer Login/Signup Invitation" type="object" name="create_customer_acocunt" icon="fa-user-plus" class="oe_highlight"/>
                          <button string="Cancel" class='oe_link' special="cancel"/>
                      </footer>
                  </form>
              </field>
        </record>
    </data>
</odoo>
